{{#if admin}}
<ul class="list-group">

  {{#each comentarios}}
   <p class="text-danger">Usuario: {{usuario}}</p>
  <li class="list-group-item list-group-item-dark">{{comentario}}
<button class="borrar btn btn-dark float-right" data="{{id_comentario}}">BORRAR</button></li>
<p class="text-success">Puntaje: {{puntaje}}</p>
  {{/each}}
</ul>
{{else}}
<ul class="list-group">
  {{#each comentarios}}
  <p class="text-danger">Usuario: {{usuario}}</p>
  <li class="list-group-item list-group-item-dark">{{comentario}}</li>
    <p class="text-success">Puntaje: {{puntaje}}</p>
  {{/each}}
</ul>
{{/if}}
